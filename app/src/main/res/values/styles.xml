<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
        <item name="colorPrimary">@color/textextra</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_acitivity_background</item>
    </style>
<!--check box color-->
    <style name="colored_checkbox" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/red</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>



</resources>
