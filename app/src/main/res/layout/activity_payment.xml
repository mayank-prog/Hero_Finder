<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".PaymentActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="25dp"
        android:background="@color/colorPrimary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">


            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subscribe Now"
                android:textColor="@color/textcolor"
                android:textSize="28dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@+id/radioOptions"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.571" />

            <RadioGroup
                android:id="@+id/radioOptions"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toTopOf="@+id/pay_btn"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent">


                <RadioButton
                    android:id="@+id/Monthly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:shadowColor="@color/black"
                    android:text="1/Rs.         Monthly*"
                    android:textSize="16dp"
                    android:theme="@style/colored_checkbox" />


                <RadioButton
                    android:id="@+id/Quarterly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="@color/black"
                    android:text="1999/Rs.  Quarterly*"
                    android:textSize="16dp"
                    android:theme="@style/colored_checkbox" />

                <RadioButton
                    android:id="@+id/Half_yearly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="@color/black"
                    android:text="3499/Rs.  Half Yearly*"
                    android:textSize="16dp"
                    android:theme="@style/colored_checkbox" />

                <RadioButton
                    android:id="@+id/yearly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="@color/black"
                    android:text="5999/Rs.  Yearly*"
                    android:textSize="16dp"
                    android:theme="@style/colored_checkbox" />


            </RadioGroup>

            <Button
                android:id="@+id/pay_btn"
                android:layout_width="99dp"
                android:layout_height="32dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button_rounded"
                android:text="Continue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read T&amp;C before continue*"
                android:textColor="#F80101"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.974"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginRight="32dp"
                app:layout_constraintTop_toBottomOf="@+id/pay_btn"
                app:layout_constraintVertical_bias="0.222" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>