<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/box_for_calc">

        <TextView
            android:id="@+id/c_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="0dp"
            android:text="Demo Name"
            android:textColor="#1085E1"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/tv_textopen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="Open :-"
            android:textColor="#3B77DF"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/emailtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_textopen"
            android:layout_marginLeft="10dp"
            android:text="High  :-"
            android:textColor="#ED15DC0E"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/tv_Open"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/emailtext"
            android:textColor="#000"
            android:layout_marginTop="40dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_High"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Open"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/tv_textopen"
            android:textColor="#000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_textlow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/tv_High"
            android:text="Low     :-"
            android:layout_marginTop="40dp"
            android:textColor="#FA0C0C"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_textclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_textlow"
            android:layout_marginStart="6dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/tv_Open"
            android:text="Close  :-"
            android:textColor="#FFB13B"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_low"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/tv_textlow"
            android:textColor="#000"
            android:textSize="16dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_low"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/tv_textclose"
            android:textColor="#2B2828"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/delete_history"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/delete" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>